<%# ----------------------------------- %>
<nav class="bg-blue-50 shadow-sm px-5">
  <div class=" px-4">
    <div class="flex justify-between items-center">
      <div class="flex space-x-7">
        <!-- Website Logo -->
        <div>
          <!-- Website Logo -->
          <div class="flex items-center">
            <a href="/engineering_managers/users">  <%=image_tag("logo.png",class:"h-16")%></a>
            <%= link_to "Visibility", engineering_managers_users_path, class:"text-2xl text-purple-600"%>
            <%= link_to "Point", engineering_managers_users_path, class:"text-2xl "%>
          </div>
        </div>
        <!-- Primary Navbar items -->
        <div class="hidden md:flex items-center space-x-7 md:space-x-5">
          <%= link_to 'See Profile',  "/admins/profile_details", class:"py-4 px-2 text-purple-500"%>
          <%= link_to 'Projects',  engineering_managers_projects_path,class:"py-4 px-2 text-purple-500  hover:border-blue-200 transition duration-300"%>
          <%= link_to 'Developers',  engineering_managers_developers_path,class:"py-4 px-2 text-purple-500  hover:border-blue-200 transition duration-300"%>
          <%= link_to 'Skills',  engineering_managers_skills_path,class:"py-4 px-2 text-purple-500  hover:border-blue-200 transition duration-300"%>
        </div>
      </div>
      <!-- Secondary Navbar items -->
      <div class=" md:flex items-center space-x-3 ">
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete},class:"text-white bg-red-700 hover:bg-red-400 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-3 md:mr-0 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"%>
      </div>
      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button class="outline-none mobile-menu-button">
          <svg class=" w-6 h-6 text-blue-500 hover:text-blue-500 "
							x-show="!showMenu"
							fill="none"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
            <path d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <!-- mobile menu -->
  <div class="hidden mobile-menu text-center">
    <ul class="space-y-3">
      <li class=""><%= link_to 'See Profile',  "/engineering_managers/profile_details", class:"block py-4 px-2 text-purple-500 hover:bg-blue-300"%></li>
      <li><%= link_to 'Projects',  engineering_managers_projects_path,class:"block py-4 px-2 text-purple-500  hover:border-blue-200 transition duration-300 hover:bg-blue-300"%></li>
      <li><%= link_to 'Developers',  engineering_managers_developers_path,class:"block py-4 px-2 text-purple-500  hover:border-blue-200 transition duration-300 hover:bg-blue-300"%></li>
      <li><%= link_to 'Skills',  engineering_managers_skills_path,class:"block py-4 px-2 text-purple-500  hover:border-blue-200 transition duration-300 hover:bg-blue-300"%></li>
    </ul>
  </div>
</nav>
<script>
  var btn = document.querySelector("button.mobile-menu-button");
  var menu = document.querySelector(".mobile-menu");

  btn.addEventListener("click", () => {
  	menu.classList.toggle("hidden");
  });
</script>
