<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
  <th scope="row" class="py-2 px-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <%= skill.id %>
  </th>
  <th scope="row" class="py-2 px-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <%= skill.name %>
  </th>
 
  <td class="text-xs sm:text-sm md:text-base lg:py-4">
    <%= link_to "See People", "/admins/skill_users/"+skill.id.to_s,class:"bg-blue-500 p-2 sm:p-2 rounded-lg text-white lg:p-3"%>

  </td>
  <td class="text-xs sm:text-sm md:text-base lg:py-4">
    <%= link_to "Delete", admins_skill_path(skill),  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'},class:"bg-red-500 p-2 sm:p-2 rounded-lg text-white lg:p-3" %>
  </td>
</tr>
