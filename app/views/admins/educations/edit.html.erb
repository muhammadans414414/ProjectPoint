<div class="bg-grey-lighter min-h-screen flex flex-col">
            <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
                <div class="bg-white px-6 py-8 rounded shadow-xl text-black w-full">
                    <h1 class="mb-8 text-3xl text-center">Add Education</h1>
                      <%= form_with model:[:admins,@education] do |f| %>
                      <%=  f.text_field :title, autofocus: true,class:"block border border-grey-light w-full p-3 rounded mb-4",placeholder:"Title"%>
                      <%= f.text_field :major, autofocus: true,class:"block border border-grey-light w-full p-3 rounded mb-4",placeholder:"Major"%>
                      <%=  f.text_field :institute, autofocus: true,class:"block border border-grey-light w-full p-3 rounded mb-4",placeholder:"Institute"%>
                       <%= f.date_field :graduation_date, autofocus: true,class:"appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"%>
                      <%= f.hidden_field :user_id,  user_id:@education.user_id%>   
                      <div class="text-center">
                      <%= f.submit class:'bg-purple-400 rounded-md hover:bg-slate-500 text-white py-3 rounded-2xl my-3 px-3' %>
                      </div>
                   <%end%>
                </div>      
            </div>
</div>
