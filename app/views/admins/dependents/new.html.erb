<div class="bg-grey-lighter min-h-screen flex flex-col">
            <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
                <div class="bg-white px-6 py-8 rounded shadow-xl text-black w-full">
                    <h1 class="mb-8 text-3xl text-center">Add Dependent</h1>
                      <%= form_with model:[:admins,@dependent] do |f| %>
                      <%=  f.text_field :name, autofocus: true,class:"block border border-grey-light w-full p-3 rounded mb-4",placeholder:"Name"%>
                      <%=  f.text_field :phone,class:"block border border-grey-light w-full p-3 rounded mb-4",placeholder:"Phone Number"%>
                      <%=  f.text_field :residence_phone, autofocus: true,class:"block border border-grey-light w-full p-3 rounded mb-4",placeholder:"Residence Phone"%>
                      <%=  f.date_field :date_of_birth, autofocus: true,class:"appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"%>
                      <%=  f.hidden_field :user_id,  user_id:@dependent.user_id%>     
                      <%= f.text_area :address, autofocus: true,placeholder:"Address",class:"block mb-2 p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
                      <%= f.text_field :cnic, autofocus: true,placeholder:"CNIC",class:"block border border-grey-light w-full p-3 rounded mb-4"%>
                      <%= f.text_field :nationality, autofocus: true,placeholder:"Nationality",class:"block border border-grey-light w-full p-3 rounded mb-4"%>
                      <%= f.text_field :action, autofocus: true,placeholder:"Action",class:"block border border-grey-light w-full p-3 rounded mb-4"%>
                      
                      <div class="text-center">
                      <%=  f.submit class:'bg-purple-400 rounded-md hover:bg-slate-500 text-white py-3 rounded-2xl my-3 px-3' %>
                      </div>
                   <%end%>
                </div>      
            </div>
</div>
