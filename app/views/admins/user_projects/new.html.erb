<h1> Assign Project </h1>
<%= form_with model:[:admins,@user_project], data:{turbo:false} do |f| %>
  <div class="field">
    <%= f.label :"Developer" %>
    <%= f.collection_select :user_id, User.joins(:role).where("roles.name =?","developer"), :id, "combined_name", prompt:true%>
    <% @user_project.errors.full_messages_for(:user_id).each do |message| %>
      <div class="alert bg-danger">
        <%= message %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :"Project" %>
    <%= f.collection_select :project_id, Project.all, :id, :full_name, prompt:true%>
    <% @user_project.errors.full_messages_for(:project_id).each do |message| %>
      <div class="alert bg-danger">
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <%= f.submit "Assign Project" %>
  </div>
<%end%>
