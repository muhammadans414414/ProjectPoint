<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post },data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'border-2 border-indigo-600 rounded-md' %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class:'bg-purple-400 rounded-md hover:bg-slate-500 text-white'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
