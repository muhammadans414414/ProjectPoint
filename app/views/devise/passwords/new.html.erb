<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'border-2 border-indigo-600 rounded-md' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'bg-purple-400 rounded-md hover:bg-slate-500 text-white'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
